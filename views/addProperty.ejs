<form action="/landlord/add-property" method="POST" enctype="multipart/form-data">
    <div>
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" required>
    </div>
    <div>
        <label for="size">Size:</label>
        <select name="size" id="size" required>
            <option value="1BHK">1BHK</option>
            <option value="2BHK">2BHK</option>
            <option value="3BHK">3BHK</option>
            <option value="4BHK">4BHK</option>
            <option value="Villa">Villa</option>
        </select>
    </div>
    <div>
        <label for="rent">Rent:</label>
        <input type="number" name="rent" id="rent" required>
    </div>
    <div>
        <label for="images">Upload Images:</label>
        <input type="file" name="images" id="images" multiple accept="image/*"> <!-- Ensure 'multiple' is present -->
    </div>
    <button type="submit">Add Property</button>
</form>